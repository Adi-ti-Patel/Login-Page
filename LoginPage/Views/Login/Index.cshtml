@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Index";
    ViewData["Title"] = "Login Page";
}

<html>

<div class="text-center">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <form asp-controller="Login" asp-action="Login" method="post">
        <h2> LOGIN </h2>
        <br />
        <div class="border border-3 rounded mx-auto w-25 border">
            <br/>
            <div>
                <img src="~/Images/img_avatar2.png" alt="User" style="border-radius:100px; width:150px">
            </div>
            <br />
            <div class="container">
                <label asp-for="Name"><b>User Name:</b></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Username" required />
                <br />

                <label asp-for="Password"><b>Password:</b></label>
                <input asp-for="Password" class="form-control" placeholder="Enter Password" required>
                <br />

                <button type="submit" class="btn btn-success">Login</button>
                <br /> <br />

                <button type="submit" class="btn btn-warning">Forget Password?</button>
                <br /> <br />

                <label>
                    <input type="checkbox" checked="checked" name="remember"> Remember login
                </label>
                <br />  <br />
            </div>
        </div>
    </form>
</div>

</html>


